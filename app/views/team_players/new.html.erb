<%= form_with(url: "/teams/#{@team.id}/players", method: :post) do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>

  <%= form.label :jersey_number %>
  <%= form.text_field :jersey_number %>

 <%= form.radio_button :golden_glove, 'true' %> true
 <%= form.radio_button :golden_glove, 'false' %> false <br>
 

  <%= form.submit 'Add Player' %>
<% end %>